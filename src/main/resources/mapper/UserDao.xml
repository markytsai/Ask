<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.ilsxh.dao.UserDao">

    <select id="selectUserByUserId" resultType="User" parameterType="int">
        SELECT *
        FROM user
        WHERE user_id = #{userId}
    </select>

    <select id="selectUserIdByEmailAndPassword" resultType="Integer">
        SELECT user_id
        FROM user
        WHERE email = #{email} AND password = #{password}
    </select>

    <select id="selectUsernameByUserId" parameterType="Integer" resultType="String">

        SELECT username
        FROM user
        WHERE user_id = #{userId}

    </select>

    <insert id="regiterNewUser">
        insert into user(username, email, password) values(#{username}, #{email}, #{password});
        <selectKey keyColumn="user_id" resultType="Integer" keyProperty="userId" order="AFTER">
            SELECT user_id
        </selectKey>
    </insert>

    <select id="selectUserByEmail" resultType="com.ilsxh.entity.User">
        select * from user
        where email = #{email}
    </select>

</mapper>

